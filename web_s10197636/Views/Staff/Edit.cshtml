@model web_s10197636.Models.Staff

@{
    ViewData["Title"] = "Edit";
}
<h4 class="PageTitle">Edit Staff Record</h4>
<hr />
<form asp-action="Edit">
    <fieldset class="FormContent">

        <div class="form-group row">
            <label asp-for="StaffId"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="StaffId" readonly
                       class="form-control-plaintext" />
            </div>
        </div>

        @* As there are purposes to set Email and DOB required to prevent errors,
            I have to include them in view but displaying them in style:none *@

        <div style="display:none" class="form-group row">
            <label asp-for="Email"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Email" readonly
                       class="form-control-plaintext" />
            </div>
        </div>

        <div style="display:none" class="form-group row">
            <label asp-for="DOB"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="DOB" readonly
                       class="form-control-plaintext" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Name"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Name" readonly
                       class="form-control-plaintext" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Salary"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary"
                      class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="checkbox col-sm-9 offset-sm-3">
                <label>
                    <input asp-for="IsFullTime" />
                    @Html.DisplayName("IsFullTime")
                </label>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="BranchNo"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <!-- Drop-down list displaying Branch Address,
            with Branch Number as returned value -->
                <select asp-for="BranchNo"
                        asp-items="@(new SelectList(@ViewData["BranchList"]
                                    as List <Branch>,"BranchNo", "Address"))"
                        class="form-control"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Save"
                       class="btn btn-primary" />
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

    </fieldset>
</form>